		<activity
            android:name="com.jasonxuli.test.VideoAndPlayListActivity"
            android:label="@string/main_title" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.jasonxuli.test.ViewVideoActivity"
            android:label="@string/view_video_title"
            android:parentActivityName="com.jasonxuli.test.VideoAndPlayListActivity" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="video/mp4"/>
            </intent-filter>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jasonxuli.test.MainActivity" />
        </activity>
        
    </application>

</manifest>

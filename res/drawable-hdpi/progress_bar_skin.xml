<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
		<shape>
	        <gradient
	                android:startColor="#99333333"
	                android:centerColor="#99555555"
	                android:centerY="1.0"
	                android:endColor="#99888888"
	                android:angle="270"
	        />
		</shape>
	</item>

	<item android:id="@android:id/progress">
		<clip>
	        <shape>
	            <gradient
	                android:startColor="#99aaaaaa"
	                android:centerColor="#99cccccc"
	                android:centerY="1.0"
	                android:endColor="#99ffffff"
	                android:angle="270"
	            />
	        </shape>
	    </clip>
    </item>

</layer-list>

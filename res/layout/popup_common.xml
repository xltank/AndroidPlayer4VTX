<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/popup_common_width"
    android:layout_height="@dimen/popup_common_height"
    android:orientation="vertical" 
    android:background="#ACACAC"
    >

    <TextView
        android:id="@+id/popup_common_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Popup Title"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/popup_common_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message Message Message Message Message Message Message Message " />

    <Button
        android:id="@+id/popup_common_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"/>

</LinearLayout>
